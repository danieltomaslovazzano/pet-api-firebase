{
  "name": "pet-api-tests",
  "version": "1.0.0",
  "description": "Test suite for Pet API",
  "scripts": {
    "test": "jest",
    "test:auth": "jest auth/auth.test.js",
    "test:pets": "jest pets/pets.test.js",
    "test:users": "jest users/users.test.js",
    "test:organizations": "jest organizations/organizations.test.js",
    "test:conversations": "jest conversations/conversations.test.js",
    "test:messages": "jest messages/messages.test.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "axios": "^1.8.3",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": ["./config.js"],
    "reporters": [
      "default",
      ["jest-html-reporter", {
        "pageTitle": "Pet API Test Report",
        "outputPath": "./reports/test-report.html",
        "includeFailureMsg": true,
        "includeConsoleLog": true
      }]
    ]
  }
} 